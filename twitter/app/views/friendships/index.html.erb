<p id="notice"><%= notice %></p>

<h1>フォロワー</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <td><%= image_tag(friendship.friend.profile_image_path, :size => "50x50") %></td>  
        <td><%= friendship.friend.screen_name %></td>  
        <td><%= link_to 'Show', friendship %></td>
        <td><%= link_to 'Destroy', friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

